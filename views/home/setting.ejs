<%include ../layout/header%>


<div id="main">
  
<div id="sidebar">
<%include ../layout/sidebar%>
  <div class="panel">
    <div class="header">
      <span class="col_fade">关于</span>
    </div>
    <div class="inner">
      <p>CNode：Node.js专业中文社区</p>

      <p>在这里你可以：</p>
      <ul>
        <li>向别人提出你遇到的问题</li>
        <li>帮助遇到问题的人</li>
        <li>分享自己的知识</li>
        <li>和其它人一起进步</li>
      </ul>
    </div>
  </div>
</div>

<div id="content">
  <div class="panel">
    <div class="header">
      <ul class="breadcrumb">
        <li><a href="/">主页</a><span class="divider">/</span></li>
        <li class="active">设置</li>
      </ul>
    </div>
    <div class="inner">


      
      <form id="setting_form" class="form-horizontal" action="/users/dosetting" method="post" enctype="multipart/form-data">
      
         <div class="control-group">
          <label class="control-label" for="url">用户名</label>

          <div class="controls">
            <input class="input-xlarge" id="url" name="uname" size="30" readonly type="text" value="<%=user.uname%>">
          </div>
        </div>
    
        <div class="control-group">
          <label class="control-label" for="url">电子邮箱</label>

          <div class="controls">
            <input class="input-xlarge" id="url" name="email" size="30" readonly type="email" value="<%=user.email%>">
          </div>
        </div>


       <div class="control-group">
          <label class="control-label" for="signature">修改头像</label>
           <div class="controls">
           <input type="file" name="up_file">
          </div>
        </div>

      
        <div class="control-group">
          <label class="control-label" for="signature">个性签名</label>

          <div class="controls">
            <textarea class="input-xlarge" id="signature" name="mark" size="30"><%=user.mark?user.mark:'这家伙很懒!什么都没留下!....'%>
            </textarea>
          </div>
        </div>

        <div class="form-actions">
          <input type="submit" class="span-primary submit_btn"  value="提交">
        </div>
      </form>
    </div>
  </div>

  <div class="panel">
    <div class="header">
      <span class="col_fade">更改密码</span>
    </div>
    <div class="inner">
      <% if(errMsg.length){%>
      <div class="alert alert-danger" role="alert">
          <%=errMsg[0]%>
      </div>
    <%}%>



      <form id="change_pass_form" class="form-horizontal" action="/users/doosetting" method="post">
        <div class="control-group">
          <label class="control-label" for="old_pass">当前密码</label>

          <div class="controls">
            <input class="input-xlarge" type="password" id="old_pass" name="old_pass" size="30">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="new_pass">新密码</label>

          <div class="controls">
            <input class="input-xlarge" type="password" id="new_pass" name="new_pass" size="30">
          </div>
        </div>
        <input type="hidden" id="action" name="action" value="change_password">
        <input type="hidden" name="_csrf" value="MMIUaH2F-edkL2k93rvXR1y9wAE_mu4ZyiXE">

        <div class="form-actions">
          <input type="submit" class="span-primary submit_btn" data-loading-text="更改中.." value="更改密码">
        </div>
      </form>
    </div>
  </div>

</div>

</div>
<%include ../layout/footer%>
